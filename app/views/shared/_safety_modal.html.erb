<!-- app/views/shared/_safety_modal.html.erb -->

<% if user_signed_in? && user_context&.impersonation_mode? %>
  <!-- Impersonation Safety Modal -->
  <div class="modal fade" id="impersonationSafetyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-warning">
        <div class="modal-header bg-warning text-dark">
          <h5 class="modal-title d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Impersonation Mode Active
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-warning d-flex align-items-center mb-3">
            <i class="bi bi-person-check me-2"></i>
            <div>
              <strong>You are acting as: <%= user_context.acting_user.email %></strong>
              <br>
              <small class="text-muted">Trainer: <%= current_user.email %></small>
            </div>
          </div>

          <p class="mb-3">
            <strong>Are you sure you want to perform this action?</strong>
          </p>

          <div class="action-details" id="safetyModalDetails">
            <!-- Action details will be populated by JavaScript -->
          </div>

          <div class="mt-3">
            <small class="text-muted">
              <i class="bi bi-info-circle me-1"></i>
              This action will be logged for audit purposes.
            </small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-lg me-1"></i>
            Cancel
          </button>
          <button type="button" class="btn btn-warning" id="confirmSafetyAction">
            <i class="bi bi-check-lg me-1"></i>
            Confirm Action
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
