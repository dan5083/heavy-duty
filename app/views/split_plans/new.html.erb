<h1 class="mb-4">Choose Your Split Plan</h1>

<%= simple_form_for @split_plan do |f| %>
  <div class="mb-4">
    <h5>Choose wisely</h5>

    <% @split_data.each do |key, days| %>
      <div class="form-check mb-3">
        <%= radio_button_tag :split_plan_choice, key, false,
            class: "form-check-input",
            id: "split_#{key}" %>
        <%= label_tag "split_#{key}", class: "form-check-label" do %>
          <strong>
            <%= @label_data[key] %>
            <% if key.to_s == '8_day_split' %>
              <span class="text-success">(Suggested)</span>
            <% end %>
          </strong><br>
          <small class="text-muted"><%= days.join(" â†’ ") %></small>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= f.button :submit, "Create Split Plan", class: "btn btn-success" %>
<% end %>
