<h1 class="mb-4">Choose Your Split Plan</h1>

<%= simple_form_for @split_plan do |f| %>
  <div class="mb-4">
    <h5>Choose wisely...(although you can switch at anytime)</h5>

    <!-- Custom Split Option (Integrated) -->
    <div class="form-check mb-3">
      <%= radio_button_tag :split_plan_choice, 'custom_split', false,
          class: "form-check-input",
          id: "split_custom" %>
      <%= label_tag "split_custom", class: "form-check-label" do %>
        <strong>
          <%= AppConstants::LABELS[:custom_split] %>
        </strong><br>
        <small class="text-muted">Design your own split with custom muscle groups and recovery times</small>
      <% end %>
    </div>

    <% @split_data.each do |key, days| %>
      <div class="form-check mb-3">
        <%= radio_button_tag :split_plan_choice, key, false,
            class: "form-check-input",
            id: "split_#{key}" %>
        <%= label_tag "split_#{key}", class: "form-check-label" do %>
          <strong>
            <%= @label_data[key] %>
            <% if key.to_s == '8_day_split' %>
              <span class="text-success">(Suggested)</span>
            <% end %>
          </strong><br>
          <small class="text-muted"><%= days.join(" â†’ ") %></small>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= f.button :submit, "Continue", class: "btn btn-success" %>
<% end %>
